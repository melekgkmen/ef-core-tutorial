@model IEnumerable<Record>

    <h2>Record List</h2>
    <a asp-action="Create" class="btn btn-primary">Record Add</a>
    <hr>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th style="width:150px;">@Html.DisplayNameFor(m => m.RecordId)</th>
                <th>@Html.DisplayNameFor(m => m.Student.StudentName)</th>
                <th>@Html.DisplayNameFor(m => m.Course.Title)</th>
                <th style="width:150px;"></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem=>item.RecordId)</td>
                    <td>@Html.DisplayFor(modelItem=>item.Student.StudentName)</td>
                    <td>@Html.DisplayFor(modelItem=>item.Course.Title)</td>                
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.StudentId" class="btn btn-sm btn-primary">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.StudentId" class="btn btn-sm btn-danger">Delete</a>
                    </td>                
                
                </tr>
            }
        </tbody>
    </table>