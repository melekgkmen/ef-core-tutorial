@model IEnumerable<Teacher>

    <h2>Teacher List</h2>
    <a href="/Teacher/Create" class="btn btn-primary">Teacher Add</a>
    <hr>
    <table class="table table-bordered">
        <thad>
            <tr>
                <th>@Html.DisplayNameFor(m => m.TeacherId)</th>
                <th>@Html.DisplayNameFor(m=> m.Name)</th>
                <th>@Html.DisplayNameFor(m=> m.Surname)</th>
                <th>@Html.DisplayNameFor(m=> m.SartingDate)</th>
                <th style="width: 150px; "></th>
            </tr>
        </thad>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem=> item.TeacherId)</td>
                    <td>@Html.DisplayFor(modelItem=> item.Name)</td>
                    <td>@Html.DisplayFor(modelItem=> item.Surname)</td>
                    <td>@Html.DisplayFor(modelItem=> item.SartingDate)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.TeacherId" class="btn btn-sm btn-primary">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.TeacherId" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>