@model IEnumerable<Course>

    <h2>Course List</h2>
    <a href="/Course/Create" class="btn btn-primary">Course Add</a>
    <hr>
    <table class="table table-bordered">
        <thad>
            <tr>
                <th>@Html.DisplayNameFor(m => m.CourseId)</th>
                <th>@Html.DisplayNameFor(m=> m.Title)</th>
                <th>@Html.DisplayNameFor(m=> m.Teacher.NameSurname)</th>
                <th style="width: 150px; "></th>
            </tr>
        </thad>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem=> item.CourseId)</td>
                    <td>@Html.DisplayFor(modelItem=> item.Title)</td>
                    <td>@Html.DisplayFor(modelItem=> item.Teacher.NameSurname)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.CourseId" class="btn btn-sm btn-primary">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.CourseId" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>