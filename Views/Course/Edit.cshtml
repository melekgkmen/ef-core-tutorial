@model CourseViewModel

<h2>Course Update</h2>
<hr>

<div class="col-8">
    <form asp-controller="Course" asp-action="Edit" method="post">
        <input type="hidden" asp-for="CourseId">
        <div class="mb-3">
            <label asp-for="Title" class="form-label">Title</label>
            <input asp-for="Title" class="form-control">
        </div>

        <div class="mb-3">
            <label asp-for="TeacherId" class="form-label">Teacher</label>
            <select asp-for="TeacherId" asp-items="ViewBag.Teachers" class="form-select">
                <option value="">Choose</option>
            </select>
        </div>

        <button type="submit" class="btn btn-secondary">Add</button>
    </form>
</div>
<div class="col-4">
    <h4>Students</h4>
    <hr>
    <ul>
        @foreach (var item in @Model.Records)
        {
            <li>@item.Student.NameSurname</li>
        }
    </ul>

</div>

